#lang racket

(require rackunit)

(define (Akkerman x y)
  (cond ((= y 0) 0)
        ((= x 0) (* 2 y))
        ((= y 1) 2)
        (else (Akkerman (- x 1)
                 (Akkerman x (- y 1))))))

(define (f n) (Akkerman 0 n)) ; f считает 2n
(check-equal? (f 20) 40)


(define (g n) (Akkerman 1 n)) ; g считает 2^n
(check-equal? (g 20) 1048576)

(define (h n) (Akkerman 2 n)) ; h считает 2^2^n
(check-equal? (h 4) 65536)


